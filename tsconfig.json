{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "module": "esnext",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["*"],
      "@component/*": ["components/*"],
      "@route/*": ["routes/*"],
      "@view/*": ["views/*"],
      "@tool/*": ["utils/tools/*"],
      "@image/*": ["assets/images/*"],
      "@store/*": ["store/*"],
      "@style/*": ["assets/styles/*"],
      "@ns/*": ["namespaces"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "mock"],
  "include": ["src", "typings"]
}