{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "module": "esnext",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "@component/*": ["src/components/*"],
      "@route/*": ["src/routes/*"],
      "@view/*": ["src/views/*"],
      "@tool/*": ["src/utils/tools/*"],
      "@image/*": ["src/assets/images/*"],
      "@store/*": ["src/store/*"],
      "@style/*": ["src/assets/styles/*"],
      "@ns/*": ["src/namespaces"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "mock"],
  "include": ["src", "typings"]
}